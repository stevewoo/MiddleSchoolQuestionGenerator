{
    "manifest_version": 3,
    "name": "Open Question Generator",
    "version": "1.0",
    "description": "Generate questions based on text",
    "icons": {
        "16": "imgs/icon16.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "scripting"
    ],
    "action":
        { "default_popup": "popup.html" },
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "<all_urls>"
    ]
}
