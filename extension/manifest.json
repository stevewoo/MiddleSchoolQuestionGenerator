{
    "manifest_version": 2,
    "name": "Open Question Generator",
    "version": "1.0",
    "description": "Generate questions based on text",
    "icons": {
        "16": "imgs/icon16.png"
    },
    "web_accessible_resources": [
        "imgs/*.jpg",
        "imgs/*.jpeg"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "<all_urls>",
        "webRequest",
        "http://*/*",
        "https://*/*"
    ],
    "browser_action":
        { "default_popup": "popup.html" }
}
