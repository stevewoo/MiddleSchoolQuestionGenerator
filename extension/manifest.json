{
    "manifest_version": 3,
    "name": "Open Question Generator",
    "version": "1.0",
    "description": "Generate questions based on text",
    "action": {},
    "icons": {
        "16": "imgs/icon16.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "scripting",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.wikipedia.org/*",
                "*://*.repl.co/"
            ],
            "js": [
                "content.js"
            ],
            "css":        ["tooltip.css"]
        }
    ]
}
